{% extends 'master.twig' %}

{% block body %}
    <div class="container">
        <div class="row">
            <div class="col-md-4 col-md-offset-4">
                {% if flash.message %}
                <div class="alert alert-danger alert-dismissable" style="margin-top: 25px">
                    <button aria-hidden="true" data-dismiss="alert" class="close" type="button">Ã—</button>
                    {{ flash.message }}
                </div>
                {% endif %}
                <form role="form" class="form-signin" method="post" action="{{baseUrl()}}/login">
                            <input type="hidden" name="redirect" value="{{ flash.redirect ? : redirect}}">
                    <h2 class="form-signin-heading">Connectez-vous avec votre compte</h2>
                    <label for="inputEmail" class="sr-only">Adresse mail</label>
                    <input id="inputEmail" class="form-control" placeholder="Adresse mail" name="email" type="email" required="" autofocus="" value="{{ flash.email }}">
                    <label for="inputPassword" class="sr-only">Mot de passe</label>
                    <input id="inputPassword" class="form-control" placeholder="Mot de passe" name="password" required="" type="password">
                    <div class="checkbox">
                    <label>
                        <input name="remember" type="checkbox" value="Remember Me" {% if flash.remember %}checked{% endif %}>Se souvenir de moi
                    </label>
                    </div>
                    <div class="form-group">
                        <div class="col-xs-6 text-center">
                            <button type="submit" class="btn btn-md btn-default btn-block">Connexion</button>
                        </div>
                        <div class="col-xs-6 text-center">
                            <a href="{{siteUrl('/')}}" class="btn btn-md btn-danger btn-block">Annuler</a>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
{% endblock %}
