{% block body %}
<div class="container">
    <div class="row">
        <div class="text-center">
            <h3 class="page-header">Liste de vos sets</h3>
            <ul class="list-group">
            {% for set in listsets %}
                <li class="list-group-item">
                    <div class="row">
                    <div class="col-sm-3"><h5>{{ set.set_name }}</h5></div>
                       <div class="col-sm-9">
                            <a class="btn btn-default" role="button" href="{{ urlFor('listmetadataformat', {'set': set.set_name} )}}">Liste des formats présents</a>
                            <div class="btn-group" role="group">
                                <button type="button" class="btn btn-success">
                                    Ajouter des fichiers
                                </button>
                                <button type="button" class="btn btn-success dropdown-toggle" data-toggle="dropdown" aria-expanded="false" >
                                    <span class="caret"></span>
                                    <span class="sr-only"></span>
                                </button>
                                <ul class="dropdown-menu" role="menu">
                                    {% for format in listformats%}
                                        <li><a href="{{ urlFor('displayaddfiles',{ 'set': set.set_name, 'format': format.name })}}">{{ format.name }}</a></li>
                                    {% endfor %}
                                </ul>
                            </div>
                            <div class="btn-group" role="group">
                                <button type="button" class="btn btn-danger">
                                    Supprimer des fichiers
                                </button>
                                <button type="button" class="btn btn-danger dropdown-toggle" data-toggle="dropdown" aria-expanded="false" >
                                    <span class="caret"></span>
                                    <span class="sr-only"></span>
                                </button>
                                <ul class="dropdown-menu" role="menu">
                                    {% for format in existingtype %}
                                        {% for tests in format %}
                                            {%for test in tests  %}
                                                <li><a href="{{ urlFor('displaydeletefiles',{ 'set': set.set_name, 'format': test })}}">{{ test }}</a></li>
                                            {% endfor %}
                                        {% endfor %}
                                    {% endfor %}
                                </ul>
                            </div>
                            <button type="button" data-toggle="modal" data-target="#myModalDeleteSet{{ loop.index }}" class="btn btn-danger">Supprimer ce set</button>
                            <div class="modal fade" id="myModalDeleteSet{{ loop.index}}" tabindex="-1" role="dialog" aria-labelledby="myModalDeleteSetLabel">
                            <div class="modal-dialog" role="document">
                                <div class="modal-content">
                                    <div class="modal-header">
                                        <button type="button" class="close" data-dismiss="modal" aria-label="close"><span aria-hidden="true">&times</span></button>
                                        <h4>Confirmation de la suppression</h4>
                                    </div>
                                    <div class="modal-body" id="">
                                        Êtes vous sur de vouloir supprimer le set {{ set.set_name }} et ses fichiers ?
                                    </div>
                                    <div class="modal-footer">
                                        <button type="button" class="btn btn-default" data-dismiss="modal">Annuler</button>
                                        <a class="btn btn-success" role="button" href="{{ urlFor('deleteset', {'set': set.set_name })}}">Supprimer ce set</a>
                                    </div>
                                </div>
                            </div>
                            </div>
                        </div>
                    </div>
                </li>
            {% endfor %}
            </ul>
        </div>
        <!-- /.col-lg-12 -->
    </div>
    {% if flash.message is defined %}
    <div class= "message">
        {{ flash.message }}
    </div>
    {% endif %}
    {% if flash.error is defined %}
    <div class="error">
        {{ flash.error }}
    </div>
    {% endif %}
    <!-- /.row -->
</div>
<!-- /.container -->
{% endblock %}
