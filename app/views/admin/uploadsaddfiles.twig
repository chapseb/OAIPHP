{% extends 'master.twig' %}

{% block body %}
<div class="container">
    <div class="row">
        <div class="col-sm-8">
        <nav>
            <ul class="pager">
                <li><a href="{{ urlFor('listset') }}"><span aria-hidden="true">&larr;</span> Retour vers la liste des sets</a></li>
            </ul>
        </nav>
            <h3 class="page-headeri">Ajout de fichiers {{ format }} dans le set {{ setname }}</h2>
