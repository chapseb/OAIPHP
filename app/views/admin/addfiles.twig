{% extends 'master.twig' %}

{% block body %}
<div class="container">
    <div class="row">
        <div class="col-sm-12 text-center">
            <h3 class="page-header">Ajout de fichiers {{ format }} dans le set {{ setname }}</h3>
            <form role="form" class="form-horizontal" action="{{urlFor('addfiles')}}" method="POST">
                <div class="form-group">
                    <div class="col-lg-4">
                        <div class="checkbox">
                            <label><input type="checkbox" id="checkAll" class="check" value="Tout cocher">Tout cocher</label>
                        </div>
                        {% for file in files %}
                        <div class="checkbox">
                            <label>
                                <input type="checkbox" class="check" name="list_files[]" value="{{ file }}">
                                {{ file }}
                            </label>
                        </div>
                        {% endfor %}
                    </div>
                </div>
                <input type="hidden" name="format" value="{{ format }}">
                <input type="hidden" name="setname" value="{{ setname }}">
                <input type="submit"/>
            </form>
        </div>
        <!-- /.col-lg-12 -->
    </div>
    <!-- /.row -->
</div>
<!-- /.container -->
{% endblock %}
