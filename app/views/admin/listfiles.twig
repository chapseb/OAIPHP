{% extends 'master.twig' %}

{% block body %}
<div class="container">
    <div class="row">
        <div class="col-sm-10">
        <a role="button" class="btn btn-primary" href="{{ urlFor('listset') }}">Retour vers la liste des sets</a>
            <h3 class="page-header">Liste des fichiers dans le set {{ set }}</h3>
            <ul class="list-group">
            {% for file in listFiles %}
            {% set title = file.xml_path|split('/')|last %}
                <li class="list-group-item">
                    <div class="row colonne show-grid">
                        <div class="col-sm-8"><span class="label label-primary">{{ title }}</span></div>
                        <div class="col-sm-4"><span class="label label-success">{{ file.state }}</span></div>
                        <div class="col-sm-4"><span class="label label-info">{{ file.metadata_format }}</span></div>
                        <div class="col-sm-4"><span class="label label-default">{{ file.xml_path }}</span></div>
                    </div>
                </li>
            {% endfor %}
            </ul>
        </div>
        <!-- /.col-lg-12 -->
    </div>
    <!-- /.row -->
</div>
<!-- /.container -->
{% endblock %}
